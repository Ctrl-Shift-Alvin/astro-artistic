---
import { HeroConfig } from '@/shared/config/hero';
import { A } from '../elements/A';
import { type TTranslation } from '@/locales/global';

export interface Props {
	translation: TTranslation;
}
const { translation } = Astro.props;
---

<div class="w-auto">
	<h1 class="w-full text-center text-3xl font-bold">{translation.heroAvatar.title}</h1>

	<p class="newlines mt-6 text-justify text-xl leading-9">
		{translation.heroAvatar.description}
	</p>

	<div class="mt-3 flex w-full justify-center gap-1 lg:justify-start">
		{
			HeroConfig.heroSocialButtons.map((item) => (
				<A href={item.href} target="_blank" client:only="react">
					<img
						class="mx-4 size-12 hover:size-11"
						src={item.imageSource}
						alt={item.imageAlt}
						loading="lazy"
					/>
				</A>
			))
		}
	</div>
</div>
<img
	class="mt-5 h-80 rounded-md object-cover lg:w-64"
	src={HeroConfig.avatarImageSource}
	alt="Avatar image"
	loading="lazy"
/>
