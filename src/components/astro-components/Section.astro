---
export interface Props {
	title?: any;
	id?: string;
	className?: string;
	center?: boolean;
}

const {
	title,
	id,
	className,
	center
} = Astro.props;
---

<section
	id={id}
	class:list={["mx-auto w-10/12 mb-20", {"flex flex-col items-center": center}, className]}
>
	{title && <div class="text-center text-4xl font-bold mb-5">{title}</div>}
	<slot />
</section>
